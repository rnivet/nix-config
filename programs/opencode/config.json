{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "agent": {
    "plan": {
      "mode": "primary",
      "model": "zen/claude-sonnet-4-5",
      "permissions": {
        "bash": {
          "cat": "deny"
        }
      },
      "tools": {
        "bash": true,
        "edit": false,
        "write": false
      }
    }
  },
  "mcp": {
    "browser": {
      "command": [
        "npx",
        "chrome-devtools-mcp@latest"
      ],
      "enabled": true,
      "type": "local"
    },
    "context7": {
      "enabled": true,
      "headers": {
        "CONTEXT7_API_KEY": "__CONTEXT7_API_KEY__"
      },
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    }
  }
}
